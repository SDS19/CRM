<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.crm.workbench.dao.ActivityRemarkDao">
    <select id="getRemarksCount" resultType="int">
        SELECT COUNT(*) FROM t_activity_remark WHERE activityId IN
        <foreach collection="array" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </select>
    <delete id="deleteRemarks">
        DELETE FROM t_activity_remark WHERE activityId IN
        <foreach collection="array" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>
    <select id="selectRemarks" resultType="activityRemark">
        SELECT * FROM t_activity_remark WHERE activityId = #{activityId} ORDER BY createTime DESC
    </select>
    <delete id="removeRemark">
        DELETE FROM t_activity_remark WHERE id = #{id}
    </delete>
    <insert id="insertRemark">
        INSERT INTO t_activity_remark(id,noteContent,createTime,createBy,editFlag,activityId)
        VALUES(#{id},#{noteContent},#{createTime},#{createBy},#{editFlag},#{activityId})
    </insert>
    <update id="updateRemark">
        UPDATE t_activity_remark SET noteContent=#{noteContent},editBy=#{editBy},editTime=#{editTime},editFlag='1'
        WHERE id = #{id}
    </update>
</mapper>
